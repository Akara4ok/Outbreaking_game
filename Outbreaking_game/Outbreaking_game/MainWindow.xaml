<Window x:Class="Outbreaking_game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Outbreaking_game"
        mc:Ignorable="d"
        Title="Outbreaking_game" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TextBox1" Width="150" Height="30" VerticalAlignment="Top" Margin="20" />
        <Button x:Name="MyButton" Height="40" Content="Кнопка" Click="Button_Click">
            <Button.Width>
                100
            </Button.Width>    
            <Button.HorizontalAlignment>
                Left
            </Button.HorizontalAlignment>

            <Button.Background>
                <SolidColorBrush Opacity="0.5" Color="Red" />
            </Button.Background>
        </Button>
    </Grid>
</Window>